
<div class="card">
  <div class="card-header">
    <div class="fa fa-user"></div>
    <%= link_to user.email, user_path(user) %>
  </div>
  <div class="card-footer">
    Signed up
    <%= time_ago_in_words(user.created_at) %>
    ago
  </div>
  <div class="card-footer">
    <b>
      <%= 'sign_in_count'.humanize + ":" %>
    </b>
    <%= user.sign_in_count %>
    <div class="row"></div>
    <b>
      <%= 'current_sign_in_at'.humanize + ":" %>
    </b>
    <%= user.current_sign_in_at %>
    <div class="row"></div>
    <b>
      <%= 'last_sign_in_at'.humanize + ":" %>
    </b>
    <%= user.last_sign_in_at %>
    <div class="row"></div>
    <b>
      <%= 'current_sign_in_ip'.humanize + ":" %>
    </b>
    <%= user.current_sign_in_ip %>
    <div class="row"></div>
    <b>
      <%= 'last_sign_in_ip'.humanize + ":" %>
    </b>
    <%= user.last_sign_in_ip %>
  </div>
  <div class="card-footer">
    Confirmed email?
    <% if user.confirmed_at.present? %>
      <div class="badge badge-success text-success">Yes</div>
    <% else %>
      <div class="badge badge-danger text-danger">No</div>
    <% end %>
  </div>
  <div class="card-footer">
  <% user.roles.each do |role| %>
    <div class="badge badge-info text-success">
      <%= role.name %>
    </div>
  <% end %>
</div>

  <% if policy(user).edit? %>
    <%= link_to 'Edit roles', edit_user_path(user), class: 'btn btn-sm btn-warning' %>
  <% end %>

</div>
